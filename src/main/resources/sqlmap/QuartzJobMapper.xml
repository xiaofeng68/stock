<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.quartz.dynamic.dao.QuartzJobMapper">
	<resultMap id="BaseResultMap" type="com.quartz.dynamic.pojo.QuartzJob">
		<id column="job_id" property="id" />
		<result column="job_group_code" property="gcode" />
		<result column="job_code" property="code" />
		<result column="job_des" property="des" />
		<result column="job_state" property="state" />
		<result column="job_exp" property="exp" />
		<result column="job_clsdes" property="clsdes" />
	</resultMap>
	<sql id="Example_Where_Clause">
		<trim prefix="where" prefixOverrides="and|or">
			<if test="condition.code != null">
       <![CDATA[ and job_code LIKE concat('%',#{condition.code},'%') ]]>
			</if>
			<if test="condition.state != null">
				and job_state = #{condition.state}
			</if>
		</trim>
	</sql>
	<select id="selectByExample" resultMap="BaseResultMap"
		parameterType="com.authority.pojo.Criteria">
		select * from quartz_job
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
		<if test="orderByClause != null">
			order by ${orderByClause}
		</if>
		<include refid="common.Mysql_Pagination_Limit" />
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		delete from quartz_job
		where job_id = #{id}
	</delete>
	<insert id="insert" useGeneratedKeys="true" keyProperty="job_id"
		parameterType="com.quartz.dynamic.pojo.QuartzJob">
		insert into quartz_job (job_id, job_group_code, job_code, job_des,
		job_state, job_exp,
		job_clsdes)
		values (#{id}, #{gcode}, #{code}, #{des}, #{state}, #{exp},
		#{clsdes})
	</insert>
	<select id="countByExample" parameterType="com.authority.pojo.Criteria"
		resultType="java.lang.Integer">
		select count(job_id) from quartz_job
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
	</select>
	<update id="updateByPrimaryKeySelective" parameterType="com.quartz.dynamic.pojo.QuartzJob">
		update quartz_job
		<set>
			<if test="gcode != null">
				job_group_code = #{gcode},
			</if>
			<if test="code != null">
				job_code = #{code},
			</if>
			<if test="des != null">
				job_des = #{des},
			</if>
			<if test="state != null">
				job_state = #{state},
			</if>
			<if test="exp != null">
				job_exp = #{exp},
			</if>
			<if test="exp != null">
				job_exp = #{exp},
			</if>
			<if test="clsdes!=null">
				job_clsdes = #{clsdes}
			</if>
		</set>
		where job_id = #{id}
	</update>
</mapper>